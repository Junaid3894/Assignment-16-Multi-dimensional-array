/*6. Write a program in C to find the sum of rows and columns of a Matrix.*/

#include<stdio.h>
int main()
{
int arr[3][3];
int sum=0;
printf("Enter the matrices values---------\n");
for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        printf("Enter the %d column value of %d row :",j+1,i+1);
        scanf("%d",&arr[i][j]);
    }
}
// logic to find the sum of rows and columns of a matrix
for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        sum=sum + arr[i][j];
    }
}
printf("%d",sum);
return 0;
}
