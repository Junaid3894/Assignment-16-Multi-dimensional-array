/*7. Write a program in C to print or display the lower triangular of a given matrix..*/

#include<stdio.h>
int main()
{
int arr[3][3];
int sum1=0;
int sum2=0;
printf("Enter the matrices values---------\n");
for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        printf("Enter the %d column value of %d row :",j+1,i+1);
        scanf("%d",&arr[i][j]);
    }
}
// logic to find the sum of rows and columns of a matrix
for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        sum1=sum1 + arr[i][j];
    }
}
printf(" Sum of rows is %d\n",sum1);

for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        sum2=sum2 + arr[j][i];
    }
}
printf(" Sum of columns is %d",sum2);
return 0;
}
