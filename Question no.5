/*5. Write a program in C to find the sum of left diagonals of a matrix.*/

#include<stdio.h>
int main()
{
int arr[3][3];
int sum=0;
printf("Enter the matrices values---------\n");
for(int i=0;i<3;i++){
    for(int j=0;j<3;j++){
        printf("Enter the %d column value of %d row :",j+1,i+1);
        scanf("%d",&arr[i][j]);
    }
}
// logic to find the sum of diagonals of a matrix
for(int i=0;i<=0;i++){
    for(int j=0,k=2;k>=0;j++){
        sum=sum + arr[j][k];
           k--;
    }
}
printf("%d",sum);
return 0;
}
